  <critique id="C22" status="done">
    <creator agent="true" created="2025-12-14T16:28:03.742Z" agent-type="critique"/>
    <ref ref="/world/characters/Florence.card#v3.1.0"/>
    <ref ref="/stories/Mandatory_Assistance/chapters/10_Trust_Complicated/passages/2_The_Deception/passage.card#v2.0.0"/>
